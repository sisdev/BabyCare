<?xml version="1.0" encoding="UTF-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.sisoft.babycare.ActivityBabyVaccineChart">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bodyborder"
            android:layout_marginTop="5dp"
            android:text="Vaccine Name"
            />

        <TextView
            android:id="@+id/vac_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bodyborder"
            android:layout_marginTop="5dp"
            android:text="Baby Name"
            />

        <TextView
            android:id="@+id/baby_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bodyborder"
            android:layout_marginTop="5dp"
            android:text="Vaccine Due Date"
            />



        <TextView
            android:id="@+id/vduedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bodyborder"
            android:layout_marginTop="5dp"
            android:text="Vaccine Status"
            />


        <Spinner
            android:id="@+id/spinnerstatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bodyborder"
            android:layout_marginTop="5dp"
            android:text="Completion Date"
            />


        <Button
            android:id="@+id/btn_date_given"
            android:layout_width="200dp"
            android:layout_height="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bodyborder"
            android:layout_marginTop="5dp"
            android:text="Doctor Name"
            />


        <EditText
            android:id="@+id/edit_docname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="textCapWords"
            android:hint="Doctor Name"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bodyborder"
            android:layout_marginTop="5dp"
            android:text="Remark"
            />


        <EditText
            android:id="@+id/edit_vnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="textCapSentences"
            android:hint="Remark"
             />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>



